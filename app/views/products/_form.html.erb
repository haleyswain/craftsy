<%= render "layouts/errors", :object => @product %>

<%= form_for @product, url: products_path, html: { multipart: true } do |f| %>
  <h5>Image</h5>
  <%= f.file_field :image %>
  <h5>Product Name</h5>
  <%= f.text_field :name %>
  <h5>Product Description</h5>
  <%= f.text_field :description %>
  <h5>Product Price</h5>
  <%= f.text_field :price %>
  <h5>Country of Origin</h5>
  <%= f.text_field :country %>
  <%= f.submit %>
<% end %>
